package passkey

import (
	"github.com/go-webauthn/webauthn/protocol"
	"github.com/datasektionen/logout/pkg/templates"
)

templ LoginPasskey(ca *protocol.CredentialAssertion) {
	@templates.Layout() {
		@templ.JSONScript("credential-assertion", ca)
		@base64ArrayBufferScript()
		<script type="module">
			let decodebase64url = data =>
				Uint8Array.from(window.atob(data.replace(/-/g, "+").replace(/_/g, "/")), v => v.charCodeAt(0));
			let encodebase64url = data =>
				base64ArrayBuffer(data).replace(/\+/g, "-").replace(/\//g, "_");

			let ca = JSON.parse(document.querySelector("#credential-assertion").textContent);
			ca.publicKey.challenge = decodebase64url(ca.publicKey.challenge);
			for (let c of ca.publicKey.allowCredentials) {
				c.id = decodebase64url(c.id);
			}
			let cred = await navigator.credentials.get(ca);
			let res = await fetch("/login/passkey" + window.location.search, {
				method: "post",
				headers: { "Content-Type": "application/json" },
				body: JSON.stringify({
					id: cred.id,
					rawId: encodebase64url(cred.rawId),
					type: cred.type,
					authenticatorAttachment: cred.authenticatorAttachment,
					response: {
						authenticatorData: encodebase64url(cred.response.authenticatorData),
						clientDataJSON: encodebase64url(cred.response.clientDataJSON),
						signature: encodebase64url(cred.response.signature),
						userHandle: encodebase64url(cred.response.userHandle),
					},
				}),
			});
			if (res.status == 200) window.location = "/account";
		</script>
	}
}

templ AddPasskey(cc *protocol.CredentialCreation) {
	@templates.Layout() {
		<form onsubmit="addPasskey(event)">
			<input id="passkey-name" placeholder="passkey name" name="name" type="text"/>
			<button>Add</button>
		</form>
		@templ.JSONScript("credential-creation", cc)
		@base64ArrayBufferScript()
		<script>
			let decodebase64url = data =>
				Uint8Array.from(window.atob(data.replace(/-/g, "+").replace(/_/g, "/")), v => v.charCodeAt(0));
			let encodebase64url = data =>
				base64ArrayBuffer(data).replace(/\+/g, "-").replace(/\//g, "_");

			async function addPasskey(event) {
				event.preventDefault();
				let name = document.querySelector("#passkey-name").value;
				let cc = JSON.parse(document.querySelector("#credential-creation").textContent);
				cc.publicKey.challenge = decodebase64url(cc.publicKey.challenge);
				cc.publicKey.user.id = decodebase64url(cc.publicKey.user.id);
				let cred = await navigator.credentials.create(cc);
				let res = await fetch("/passkey/add?name=" + encodeURIComponent(name), {
					method: "post",
					headers: { "Content-Type": "application/json" },
					body: JSON.stringify({
						id: cred.id,
						type: cred.type,
						authenticatorAttachment: cred.authenticatorAttachment,
						response: {
							attestationObject: encodebase64url(cred.response.attestationObject),
							clientDataJSON: encodebase64url(cred.response.clientDataJSON),
						},
					}),
				});
				if (res.status == 200) window.location = "/account";
			}
		</script>
	}
}

